<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEF2F7"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Result Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="28dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingVertical="8dp">

            <!-- Trophy Emoji / Icon Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="🏆"
                android:textSize="46sp" />

            <!-- Congratulations Text -->
            <TextView
                android:id="@+id/congratsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Congratulations!"
                android:textColor="#1E1E2C"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!-- Subtext -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="You’ve completed the quiz 🎉"
                android:textColor="#6C6C80"
                android:textSize="16sp" />

            <!-- Score -->
            <TextView
                android:id="@+id/resultText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28dp"
                android:text="Your Score: 8 / 10"
                android:textColor="#3F51B5"
                android:textSize="28sp"
                android:textStyle="bold" />

            <!-- Restart Button -->
            <Button
                android:id="@+id/restartBtn"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#3F51B5"
                android:elevation="6dp"
                android:fontFamily="sans-serif-medium"
                android:padding="14dp"
                android:text="Restart Quiz"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Footer -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Developed by Ahmaryar Khan 👨‍💻"
        android:textColor="#7B7B8E"
        android:textSize="24sp" />

</LinearLayout>
